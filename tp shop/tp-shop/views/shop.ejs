        <% for (let i = 0; i < db.length; i++ ) { %>
            <div class="card">
                <img src="<%= db[i].img %>" alt="<%= db[i].alt %>">
                <h2><%= db[i].object %></h2>
                <h2 class="price">â‚¬ <%= db[i].price %></h2>
                <p><%= db[i].desc %></p>
